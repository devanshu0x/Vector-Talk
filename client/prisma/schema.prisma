
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id String @id @default(uuid())
  name String 
  email String @unique
  avatar String 
  createdAt DateTime
  lastLoginAt DateTime
  lastActivityAt DateTime  @default(now())
  chats Chat[]
  files File[]
}

model Chat{
  chatId String @id @default(uuid())
  userId String
  title String 
  user User @relation(fields: [userId],references: [id])
  files ChatFile[]
  createdAt DateTime @default(now())
  messages Message[]
}

model ChatFile{
  id String @id @default(uuid())
  chatId String
  fileId String
  chat Chat @relation(fields: [chatId],references: [chatId])
  file File @relation(fields: [fileId],references: [fileId])
}

model File{
  fileId String @id @default(uuid())
  fileName String
  fileNameInDb String @unique
  userId String
  status FileStatus
  user User @relation(fields: [userId],references: [id])
  chats ChatFile[]
  createdAt DateTime @default(now())
}

model Message{
  messageId String @id @default(uuid())
  chatId String
  role MessageRole
  content String
  createdAt DateTime @default(now())
  chat Chat @relation(fields: [chatId],references: [chatId])

  @@index([chatId,createdAt])
}

enum MessageRole{
  USER 
  ASSISTANT
}

enum FileStatus{
  UPLOADED
  QUEUED
  PROCESSING
  EMBEDDING
  READY
  FAILED
}
